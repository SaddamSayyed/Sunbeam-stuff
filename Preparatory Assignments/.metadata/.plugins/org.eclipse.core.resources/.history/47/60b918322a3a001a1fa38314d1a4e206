void accept_info(BOOK *p)
{
			printf("\nPlease enter Book info\n1)Book Id");
			scanf("%d",&p->id);
			scanf("%*c");
			printf("\n2)Book Name:");
			fgets(p->name,20,stdin);
			printf("\n3)Price");
			scanf("%d",&p->price);
}
void display_info(BOOK *p)
{
	printf("\nBook ID\tName:\t\tprice:\t");
	printf("\n%.6d\t%.6s\t%.6d",p->id,p->name,p->price);
}
