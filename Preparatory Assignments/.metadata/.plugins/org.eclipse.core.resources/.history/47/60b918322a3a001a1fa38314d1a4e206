void display_info(BOOK *p);
int main(void)
{
	BOOK b[SIZE];
	BOOK *p=b;
	for(int i=0;i<SIZE;i++)
		accept_info(&p[i]);
	for(int i=0;i<SIZE;i++)
		display_info(&p[i]);
	//qsort(b,SIZE,sizeof(int),compare);
/*	printf("\nAfter the sorting\n");
	for(int i=0;i<SIZE;i++)
			{
				display_info(&p[i]);
			}*/
	return EXIT_SUCCESS;
}
