#include <stdio.h>
#include <stdlib.h>

void main()
{
	char *a=(char *)calloc(1,sizeof(char));
	scanf("%s",a);
	printf("%s",a);
	printf("\nsize of a= %d\n",sizeof(a));
	printf("%u",a);
	printf("\nlocation of string[1]=%u",&a[3]);
}
