#include <stdio.h>
#include <stdlib.h>
#include <string.h>
void copy_string(char *d,char *s);
int main(void)
{
	char s[20]="HINJEWADI";
	char d[20]="sunbeam";
	printf("s : %s\n",s);
	printf("d : %s\n",d);
	copy_string(s,d);
	printf("after copy\ns : %s\n",s);
	printf("d : %s\n\n\n",d);
	return EXIT_SUCCESS;
}
int find_lenght(char *s)
{
	char a;
	int i=0;
	do
	{
		a=s[i];
		i++;
	}while(a!=NULL);
	return(i-1);
}
void copy_string(char *s,char *d)
{
	int ls;
	ls=find_lenght(d);
	for(int i=0;i<ls;i++)
	{
		d[i]=s[i];
	}
}
