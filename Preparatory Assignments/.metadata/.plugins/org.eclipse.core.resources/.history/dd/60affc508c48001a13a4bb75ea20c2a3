#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define SIZE 2
#define BOOL int
#define TRUE 1
#define FALSE 0
typedef enum {EXIT,ADD,DELETE,DISPLAY}MENU;
typedef struct
{
	char name[20];
	int roll_no;
	int std;
}S;
int rear,front;
void init()
{
	rear=front=-1;
}
MENU mchoice()
{
	MENU m;
	printf("\nChoose one of the options\n 1.Add\n 2.Delete\n 3.Display\n 4.Exit");
	scanf("%d",&m);
	scanf("%*c");
	return m;
}
BOOL is_empty()
{
	if( (rear==front && rear==-1) )
		return TRUE;
	else
		return FALSE;
}
BOOL is_full()
{
	if( (rear==SIZE-1 && front== -1) || (rear==front && rear!=-1))
		return TRUE;
	else
		return FALSE;
}
void add(S *s)
{
	if(rear==SIZE-1)
		rear=0;
	else
		rear++;
	printf("Please enter info\n 1.Name :");
	fgets(s->name,20,stdin);
	printf("\n 2.Roll Number :");
	scanf("%d",&s->roll_no);
	printf("\n 3.Standard :");
	scanf("%d",&s->std);
	printf("\nentered name is %s\t\t rear=%d\tfront=%d",s->name,rear,front);
}
void delete(S *s)
{
	if(front==rear)
		front=rear=-1;
	else
		front++;
	printf("\n The Information is deleted.");
}
void display(S *s)
{
	printf("\n THe Studnt's Information is as Follows:\n 1.Name : %s"
			"\n 2.Roll number : %d\n 3.Standard : %d\n",s->name,s->roll_no,s->std);
}
int main()
{
	S s[SIZE];
	init();
	MENU choice;
	do
	{
		choice=mchoice();
		switch(choice)
		{
			case ADD:
					if(is_full())
						printf("\n The queue is Full");
					else
						add(s);
					printf("\n The Information is Added.");
					break;
			case DELETE:
					if(is_empty())
						printf("\n The queue is empty");
					else
						delete(s);
					break;
			case DISPLAY:
					if(is_empty())
						printf("\n The queue is empty");
					else
						display(s);


		}
	}while(choice!=EXIT);

	return EXIT_SUCCESS;
}
